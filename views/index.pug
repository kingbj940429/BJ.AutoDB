extends layout

block content
  .content_wrap
    .form_wrap.col-12.mw-1200.col-center
        form(action="/" method="post" class="form")
          .form_con
              .form_label HOST
              input(type="text" name="host" class="host input_300px" value="127.0.0.1")
          .form_con
              .form_label USER
              input(type="text" name="user" class="user input_300px" value="bjgg")
          .form_con
              .form_label PASSWORD
              input(type="password" name="password" class="password input_300px" value="jiwon1234")
          .form_con      
              .form_label SCHEMA
              input(type="text" name="schema" class="schema input_300px" value="bjgg")
          button(type="submit" class="query") 쿼리문 테스트
          //- button(type="submit" class='create_table') 테이블 생성
          button(type="submit" class='url_json') URL JSON형식 테이블 생성
    script.
      $('.query').click((e)=>{
        $('.form').attr("action","/connect");
      })
      $('.create_table').click((e)=>{
        $('.form').attr("action","/create_table");
      })
      $('.url_json').click((e)=>{
        $('.form').attr("action","/url_json");
      })


